@article{peng23jecol,
author = {Peng, Yunke and Prentice, Iain Colin and Bloomfield, Keith J. and Campioli, Matteo and Guo, Zhiwen and Sun, Yuanfeng and Tian, Di and Wang, Xiangping and Vicca, Sara and Stocker, Benjamin D.},
title = {Global terrestrial nitrogen uptake and nitrogen use efficiency},
journal = {Journal of Ecology},
volume = {n/a},
