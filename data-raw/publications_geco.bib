	author = {Marqués, Laura and Hufkens, Koen and Bigler, Christof and Crowther, Thomas W. and Zohner, Constantin M. and Stocker, Benjamin D.},
	month = jan,
	year = {2023},
	note = {Publisher: Nature Publishing Group},
	keywords = {acclimation, Carbon cycle, FLUXNET, Forest ecology, MODIS, PEP, phenology, Plant ecology},
	pages = {1--7},
