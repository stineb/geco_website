@article{stocker24newphyt,
author = {Stocker, Benjamin D. and Dong, Ning and Perkowski, Evan A. and Schneider, Pascal D. and Xu, Huiying and de Boer, Hugo J. and Rebel, Karin T. and Smith, Nicholas G. and Van Sundert, Kevin and Wang, Han and Jones, Sarah E. and Prentice, I. Colin and Harrison, Sandy P.},
